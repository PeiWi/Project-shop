        <div id="content-wrapper">

            <div class="container-fluid">



                <!-- DETAILS -->
                <section id="edits">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <div class="card">
                                    <div class="card-header">
                                        <h4>Edit Product</h4>
                                    </div>
                                    <div class="card-body">
                                        <form id="saveProduct" action="/products/update" method="post">
                                            <input type="hidden" name="id" value="<%= data[0].id %>">
                                            <div class="form-group">
                                                <label for="pname"> Pname</label>
                                                <input type="text" name="pname" class="form-control" value="<%= data[0].pname %>">
                                            </div>

                                            <div class="form-group">
                                                <label for="price">Price</label>
                                                <input name="price" type="text" id="price" class="form-control" value="<%= data[0].price %>">
                                            </div>
                                            <div class="form-group">
                                                <label for="cname">Category</label>
                                                <select class="form-control" name="cid">
                                                    <% 
                      for ( var i = 0 ; i < cids.length ; i++){ 
                        var selected = ( data[0].cid == cids[i].cname ) ? "selected" : "";
                        console.log('selected:', selected, data[0].cid, cids[i].cname)
                    %>
                                                    <option value="<%= i+1 %>" <%= selected %>>
                                                        <%= cids[i].cname %>
                                                    </option>
                                                    <% } %>

                                                </select>
                                            </div>
                                            <div class="formUpload" >
                                                <label for="image">Upload Image</label>
                                                <div class="custom-file" action="/upload" method="post" enctype="multipart/form-data">
                                                    <input type="file" name="logo" class="custom-file-input" id="image">
                                                    <label for="image" class="custom-file-label">Choose File</label>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="detail">Detail</label>
                                                <textarea name="editor1" class="form-control">
                    <%= data[0].detail %>
                  </textarea>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- ACTIONS -->
                <section id="actions" class="py-4 mb-4 bg-light">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-3">
                            </div>
                            <div class="col-md-3">
                                <button id="upload" class="btn btn-success btn-block" onclick="saveProduct()">
                                    <i class="fas fa-check"></i> Save Changes
                                    </buton>
                            </div>
                        </div>
                    </div>
